<%= simple_form_for(@gig) do |f| %>
  <%= f.error_notification %>

  <fieldset class="last-child">
    <%= f.input :name, autofocus: true %>
    <%= f.input :place %>
    <%= f.input :time %>
  </fieldset>

  <div class="actions">
    <%= f.submit t(:save_gig, scope: [:gigs, (controller.action_name == "new" ? :new : :edit)]) %> или <%= link_to t(:cancel), :back %>
  </div>
<% end %>
